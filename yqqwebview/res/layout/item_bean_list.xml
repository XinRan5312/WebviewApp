<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
            >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/item_search_goods_volleyimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
         />

    <TextView
        android:id="@+id/item_search_goods_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_search_goods_volleyimage"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_search_goods_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/item_search_goods_volleyimage"
        android:layout_below="@id/item_search_goods_name"
        android:text=""
        android:textSize="16sp"
        android:textColor="#777"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_search_goods_price"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="#ff1232"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_search_goods_id"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/item_search_goods_volleyimage"
        android:layout_below="@id/item_search_goods_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#777"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>